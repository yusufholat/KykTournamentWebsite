
@{
    ViewBag.Title = "GolKralligi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Gol Krallığı</h3>
<hr />

@model WebKyk.Models.TablolarDB

@using (Html.BeginForm("GolKralligi", "Admin", FormMethod.Post))
{
    <table>
        <tr>
            <td>Oyuncu Seçiniz:</td>
            <td>
                <select name="oyuncuID">
                    @foreach (var item in Model.Oyunculars)
                    {
                        <option value="@item.oyuncuID">@item.ad</option>
                    }
                </select>
            </td>
        </tr>
    </table>
  

    <!-- Oyuncu Giriniz -->
    <input class="form-control" type="text" name="golSayisi" placeholder="Oyuncunun Güncel Golünü Giriniz" required>
    <!-- Golünü Güncelle Butonu-->
    <input class="form-control" type="submit" name="eklegol" value="Kaydet">

    <hr />


    <div class="table-responsive justify-content-center">
        <table class="table table-dark">
            <thead>
                <tr>
                    <td><strong>Oyuncu</strong></td>
                    <td><strong>Toplam Golü</strong></td>
                </tr>
            </thead>

            <tbody style="background-color: rgba(255, 255, 255, 0.1)">

                @foreach (var item in Model.Oyunculars)
                {
                    <tr>
                        <td>@item.ad</td>
                        <td>@item.golSayisi</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}

