@model WebKyk.Models.TablolarDB

<h3><strong>TAKIMLAR</strong></h3>
<hr>
<div class="row text-center">
    @foreach (var item in Model.Takims)
    {
        <div class="col-md-4 col-sm-6 col-12">
            <div class="icerik">
                
                <div class="table-responsive">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <td><strong>@item.ad Takımı</strong></td>
                            </tr>
                        </thead>
                        <tbody style="background-color: rgba(255, 255, 255, 0.1)">
                            @foreach (var item2 in item.Oyuncular)
                            {
                                <tr>
                                    <td>@item2.ad</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <hr>
        </div>
    }
</div>


