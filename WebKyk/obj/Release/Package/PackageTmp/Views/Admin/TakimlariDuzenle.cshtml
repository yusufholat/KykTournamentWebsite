@{
    ViewBag.Title = "TakimSil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model WebKyk.Models.TablolarDB

<h3>Takım Sil</h3>
<hr />


<section>
    @using (Html.BeginForm("TakimSil", "Admin", FormMethod.Post))
    {
    <div class="table-responsive justify-content-center">
        <table class="table table-dark">
            <thead>
                <tr>
                    <td><strong>Takım</strong></td>
                    <td><strong>Grubu</strong></td>
                    <td><strong>Seçim</strong></td>
                </tr>
            </thead>

            <tbody style="background-color: rgba(255, 255, 255, 0.1)">

                @foreach (var item in Model.Takims)
                {
                    <tr>
                        <td>@item.ad</td>
                        <td>@item.Gruplar.ad Grubu</td>
                        <td>@Html.ActionLink("sil", "TakimSil", "Admin", new { takimID = item.takimID }, new { @class = "btn btn-danger " })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    }

</section>

