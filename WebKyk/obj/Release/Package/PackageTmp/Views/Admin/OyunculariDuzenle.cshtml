@{
    ViewBag.Title = "OyunculariDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model WebKyk.Models.TablolarDB

<h3>Oyuncu Sil</h3>
<hr />

<section>
    @using (Html.BeginForm("OyuncuSil", "Admin", FormMethod.Post))
    {
        <div class="table-responsive justify-content-center">

            <table class="table table-dark">
                <thead>
                    <tr>
                        <td><strong>Takım</strong></td>
                        <td><strong>Grubu</strong></td>
                        <td><strong>Seçim</strong></td>
                    </tr>
                </thead>

                <tbody style="background-color: rgba(255, 255, 255, 0.1)">

                    @foreach (var item in Model.Oyunculars)
                    {
                        <tr>
                            <td>@item.ad</td>
                            <td>@item.Takimlar.ad</td>
                            <td>@Html.ActionLink("sil", "OyuncuSil", "Admin", new { oyuncuID = item.oyuncuID }, new { @class = "btn btn-danger " })</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</section>

