@{
    ViewBag.Title = "TakimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model WebKyk.Models.TablolarDB

<h3>Takım Ekle</h3>
<hr />

@using (Html.BeginForm("TakimEkle", "Admin", FormMethod.Post))
{

    <table>
        <tr>
            <td>Grup Seçiniz:</td>
            <td>
                <select name="grupID">
                    @foreach (var item in Model.Grups)
                    {
                        <option value="@item.grupID">@item.ad Grubu</option>
                    }
                </select>

            </td>
        </tr>
    </table>

    <!-- Takım Giriniz -->
    <input class="form-control" type="text" name="ad" placeholder="Takım Giriniz" required>
    <!-- Takım Ekle Butonu-->
    <input class="form-control" type="submit" name="ekletakim" value="Kaydet">
}

<hr />

<div class="row text-center">
    @foreach (var item in Model.Grups)
    {
        <div class="col-md-6 col-sm-6 col-12">
            <div class="icerik">
                <h4><strong>@item.ad Grubu</strong></h4>
                <div class="table-responsive">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <td><strong>Takımlar</strong></td>
                                <td><strong>Puanı</strong></td>
                            </tr>
                        </thead>

                        <tbody style="background-color: rgba(255, 255, 255, 0.1)">

                            @foreach (var item2 in item.Takimlar)
                            {
                                <tr>
                                    <td>@item2.ad</td>
                                    <td><strong>@item2.toplamPuan</strong></td>
                                </tr>
                            }
                        </tbody>


                    </table>
                </div>
            </div>
            <hr>
        </div>
    }
</div>

